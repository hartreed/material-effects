@import 'jeet'

// Quick z-indexing with material design drop shadows optional
level(lvl, shadow = false)
  z-index lvl
  position relative
  if shadow
    if lvl == 1
      box-shadow 0 2px 10px 0 rgba(0,0,0,0.06), 0 2px 5px 0 rgba(0,0,0,0.06)
    else if lvl == 2
      box-shadow 0 3px 6px rgba(0,0,0,0.08), 0 3px 6px rgba(0,0,0,0.12)
    else if lvl == 3
      box-shadow 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.19)
    else if lvl == 4
      box-shadow 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22)
    else if lvl == 5
      box-shadow 0 19px 38px rgba(0,0,0,0.30), 0 15px 12px rgba(0,0,0,0.22)
  //remove shadow if necessary
  else
    box-shadow none
